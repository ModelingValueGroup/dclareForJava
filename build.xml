  </path>
  
  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  <import file="${basedir}/examples/module_examples.xml"/>
  
  <import file="${basedir}/jdclare/module_jdclare.xml"/>
  
  <import file="${basedir}/ext/module_ext.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.examples, clean.module.jdclare, clean.module.ext" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.examples, compile.module.jdclare, compile.module.ext" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>