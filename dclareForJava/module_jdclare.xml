<?xml version="1.0" encoding="UTF-8"?>
<project name="module_jdclare" default="compile.module.jdclare">
  <dirname property="module.jdclare.basedir" file="${ant.file.module_jdclare}"/>
  
  <property name="module.jdk.home.jdclare" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.jdclare" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.jdclare" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.jdclare" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="jdclare.output.dir" value="//../out/production/jdclare"/>
  <property name="jdclare.testoutput.dir" value="//../out/test/jdclare"/>
  
  <path id="jdclare.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="jdclare.module.production.classpath">
    <path refid="${module.jdk.classpath.jdclare}"/>
    <path refid="library.maven:_org.modelingvalue:immutable-collections:1.0.1.classpath"/>
    <path refid="library.maven:_org.modelingvalue:dclare:0.0.3.classpath"/>
  </path>
  
  <path id="jdclare.runtime.production.module.classpath">
    <pathelement location="${jdclare.output.dir}"/>
    <path refid="library.maven:_org.modelingvalue:immutable-collections:1.0.1.classpath"/>
    <path refid="library.maven:_org.modelingvalue:dclare:0.0.3.classpath"/>
  </path>
  
  <path id="jdclare.module.classpath">
    <path refid="${module.jdk.classpath.jdclare}"/>
    <pathelement location="${jdclare.output.dir}"/>
    <path refid="library.maven:_org.modelingvalue:immutable-collections:1.0.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.12.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.modelingvalue:dclare:0.0.3.classpath"/>
  </path>
  
  <path id="jdclare.runtime.module.classpath">
    <pathelement location="${jdclare.testoutput.dir}"/>
    <pathelement location="${jdclare.output.dir}"/>
    <path refid="library.maven:_org.modelingvalue:immutable-collections:1.0.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.12.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.modelingvalue:dclare:0.0.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.jdclare">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.jdclare">
    <patternset refid="excluded.from.module.jdclare"/>
  </patternset>
  
  <path id="jdclare.module.sourcepath">
    <dirset dir="/">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="jdclare.module.test.sourcepath">
    <dirset dir="/">
      <include name="tst"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.jdclare" depends="compile.module.jdclare.production,compile.module.jdclare.tests" description="Compile module jdclare"/>
  
  <target name="compile.module.jdclare.production" description="Compile module jdclare; production classes">
    <mkdir dir="${jdclare.output.dir}"/>
    <javac destdir="${jdclare.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jdclare}/javac">
      <compilerarg line="${compiler.args.jdclare}"/>
      <bootclasspath refid="jdclare.module.bootclasspath"/>
      <classpath refid="jdclare.module.production.classpath"/>
      <src refid="jdclare.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.jdclare"/>
    </javac>
    
    <copy todir="${jdclare.output.dir}">
      <fileset dir="//src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.jdclare.tests" depends="compile.module.jdclare.production" description="compile module jdclare; test classes" unless="skip.tests">
    <mkdir dir="${jdclare.testoutput.dir}"/>
    <javac destdir="${jdclare.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.jdclare}/javac">
      <compilerarg line="${compiler.args.jdclare}"/>
      <bootclasspath refid="jdclare.module.bootclasspath"/>
      <classpath refid="jdclare.module.classpath"/>
      <src refid="jdclare.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.jdclare"/>
    </javac>
    
    <copy todir="${jdclare.testoutput.dir}">
      <fileset dir="//tst">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.jdclare" description="cleanup module">
    <delete dir="${jdclare.output.dir}"/>
    <delete dir="${jdclare.testoutput.dir}"/>
  </target>
</project>